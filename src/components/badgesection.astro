<style>
  .section-split__inner {
    padding: 6rem 4rem;
    width: 100%;
    box-sizing: border-box;
  }

  .section-divider {
    position: absolute;
    left: 4rem;
    right: 4rem;
    height: 2px;
    background: var(--color-dark);
    content: "";
    z-index: 1;
    opacity: 1;
    pointer-events: none;
    display: block;
  }

  .section-content {
    display: flex;
    flex-direction: row;
    position: relative;
    padding-block: 2rem;
  }

  .section-split__header {
    flex: 1 1;
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
    margin-top: 0;
  }
  .section-split__header h2 {
    font-size: 4rem;
    font-family: "polymath-display", sans-serif;
    font-weight: 1000;
    margin: 0;
  }
  .section-split__content {
    flex: 1 1 0;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    margin-bottom: 0;
  }
  .section-split__content p {
    font-size: 2.5rem;
    font-weight: 100;
    margin: 0;
  }

  .badges-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 1.2rem;
    width: 100%;
    justify-items: stretch;
    align-items: stretch;
  }

  @media (max-width: 900px) {
    .section-split__inner {
      padding: 0 1rem;
    }
    .section-split {
      padding: 2rem 0;
    }
    .section-split__header,
    .section-split__content {
      justify-content: flex-start;
      text-align: left;
    }
    .section-split__header h2 {
      font-size: 2.2rem;
    }
    .section-split__content p {
      font-size: 1.3rem;
    }

    .section-divider {
      position: absolute;
      left: 1rem;
      right: 1rem;
    }

    .badges-grid {
      gap: 0.7rem;
    }
  }

  @media (max-width: 600px) {
    .badges-grid {
      grid-template-columns: 1fr;
      gap: 0.5rem;
    }

    .section-content {
      display: grid;
      grid-template-columns: 1fr;
    }

    .section-split__inner {
      padding-top: 3rem;
      padding-bottom: 3rem;
    }
  }
</style>
