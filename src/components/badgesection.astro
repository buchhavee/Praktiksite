<style>
  .section-split__inner {
    width: 100%;
    box-sizing: border-box;
  }

  .section-divider {
    position: absolute;
    height: 2px;
    background: var(--color-dark);
    content: "";
    z-index: 1;
    opacity: 1;
    pointer-events: none;
    display: block;
  }

  .section-content {
    display: flex;
    flex-direction: row;
    position: relative;
    padding-block: 2rem;
  }

  .section-split__header {
    flex: 1 1;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
    margin-top: 0;
    position: sticky;
    top: 5rem;
    z-index: 2;
    background: inherit;
