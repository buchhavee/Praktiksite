    max-width: 50vw;
  }
  .section-content {
    align-items: flex-start;
    gap: 1rem;
  }
  .section-split__header h2 {
    font-size: 4rem;
    font-family: "polymath-display", sans-serif;
    font-weight: 1000;
    margin: 0;
    padding-bottom: 1rem;
  }
  .section-split__content {
    flex: 1 1 0;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    margin-bottom: 0;
  }
  .section-split__content p {
    font-size: 2.5rem;
    font-weight: 100;
    margin: 0;
  }

  .badges-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 1.2rem;
    width: 100%;
  }
