</section>

<style>
  .hero-sections {
    display: flex;
    gap: 1rem;
  }

  .hero-contrast-bg {
    padding: 2rem;
    flex: 1;
    border-radius: 15px;
    border: 2px solid var(--color-medium);
    background: var(--color-darker);
    color: var(--color-light-bg);
    display: flex;
    align-items: flex-start;
    justify-content: center;
    transition: all 0.3s;
    position: relative;
    min-height: 260px;
  }
  html.dark-theme .hero-contrast-bg {
    background: var(--color-light);
  }

  .hero-contrast-bg p {
    font-size: 1.8rem;
    color: var(--color-lightest);
    transition: color 0.3s;
  }

  html.dark-theme .hero-contrast-bg p {
    color: var(--color-darkest);
  }

  .hero-image {
    flex: 1;
    border-radius: 15px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 60vh;
  }
  .hero-image img {
    width: 100%;
    min-width: 100%;
    min-height: 60vh;
    border-radius: 15px;
    object-fit: cover;
  }
  .main-button.w-inline-block {
    position: absolute;
    left: 2rem;
    bottom: 2rem;
    text-decoration: none;
    z-index: 2;
    display: inline-block;
  }
  .main-button-content {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    padding: 0.7rem 1.4rem;
    background: var(--color-lightest);
    color: var(--color-darkest);
    font-size: 0.75rem;
    font-family: inherit;
    font-weight: 700;
    border: 2px solid var(--color-medium);
    border-radius: 100px;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
    cursor: pointer;
    letter-spacing: 0.05em;
    transition:
      background 0.3s ease,
      color 0.3s ease,
      box-shadow 0.3s ease,
      transform 0.2s ease;
    position: relative;
    overflow: hidden;
  }

  .main-button-content:hover {
    color: var(--color-lightest);
    box-shadow: 0 6px 32px rgba(0, 0, 0, 0.2);
    transform: translateY(-2px);
  }

  .main-button-arrow_w {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    width: 1.6em;
    height: 1.6em;
    background: var(--color-accent);
    border-radius: 50%;
    transition: transform 0.3s ease;
    z-index: 2;
  }

  .main-button-arrow_w::before {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    width: 2em;
    height: 2em;
    background: var(--color-accent);
    border-radius: 50%;
    transform: translate(-50%, -50%) scale(1);
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: -1;
  }

  .main-button-content:hover .main-button-arrow_w::before {
    transform: translate(-50%, -50%) scale(15);
  }

  .main-button-content:hover .main-button-arrow_w {
    transform: rotate(90deg);
  }

  .main-button-content:hover .main-button-arrow.w-embed {
    color: var(--color-darkest);
  }

  .main-button-content:hover {
    color: var(--color-darkest);
    box-shadow: 0 6px 32px rgba(0, 0, 0, 0.2);
    transform: translateY(-2px);
  }
  .main-button-text_w {
    position: relative;
    display: flex;
    flex-direction: column;
    height: 1.4em;
    overflow: hidden;
    line-height: 1.2;
    z-index: 3;
  }
  .main-button-text {
    line-height: 1.2;
    font-size: 1.1em;
    font-weight: 700;
    color: inherit;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  .main-button-text_w .main-button-text:last-child {
    color: var(--color-lightest);
    position: absolute;
    left: 0;
    top: 100%;
    width: 100%;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  .main-button-arrow.w-embed {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
    color: var(--color-lightest);
    transition: color 0.3s ease;
  }
  .main-button-fill {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    border-radius: 100px;
    opacity: 0;
    transition: opacity 0.3s;
    z-index: 1;
  }
  .main-button-content:hover {
    background-color: var(--color-darkest);
    color: var(--color-accent);
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.15);
  }

  .main-button-content:hover .main-button-text {
    transform: translateY(-100%);
  }
  .main-button-content:hover .main-button-text:last-child {
    transform: translateY(-100%);
  }
</style>
